<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER" prefHeight="500.0" prefWidth="670.0" spacing="30" style="-fx-background-color: azure" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/javafx">
        <Label alignment="CENTER" prefHeight="49.0" prefWidth="197.0" style="-fx-effect: dropshadow( one-pass-box , black , 8 , 0.0 , 2 , 0 );" text="You won!" textFill="MEDIUMSLATEBLUE">
            <font>
                <Font name="Microsoft YaHei Light" size="35.0" />
            </font></Label>
        <Button fx:id="startButton" alignment="CENTER" style="-fx-background-color: whitesmoke; -fx-text-fill: orchid;" text="One more?" textFill="ORCHID">
            <font>
                <Font name="Microsoft YaHei Light" size="25.0" />
            </font></Button>
    </VBox>
    <MenuBar fx:id="menuBar" prefHeight="49.0" prefWidth="120.0" style="-fx-background-color: whitesmoke;" useSystemMenuBar="true">
        <Menu style=" -fx-font-size: 15; ">
            <items>
                <RadioMenuItem fx:id="modeItem" text="Score mode" />
                <MenuItem text="Speed">
                    <graphic>
                        <ComboBox fx:id="comboBox" prefWidth="150.0" promptText="default" />
                    </graphic>
                </MenuItem>
                <MenuItem text="Traps">
                    <graphic>
                        <Spinner fx:id="spinner" editable="true" />
                    </graphic></MenuItem>
                <MenuItem text="Close" />
            </items>
            <graphic>
                <Label prefHeight="37.0" prefWidth="86.0" text="Settings" textFill="ORCHID">
                    <font>
                        <Font name="Microsoft YaHei Light" size="18.0" />
                    </font>
                </Label>
            </graphic>
        </Menu>
    </MenuBar>
</AnchorPane>
